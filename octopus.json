{
  "workDir": ".",
  "dependencies": [
    {
      "name": "cardinal",
      "src": "https://github.com/privatesky/cardinal.git",
      "actions": [
        {
          "type": "smartClone",
          "target": "./dev/",
          "collectLog": false
        },
        {
          "type": "execute",
          "cmd": "cd ./dev/cardinal && npm install && npm run build"
        },
        {
          "type": "copy",
          "src": "./dev/cardinal/dist/cardinal",
          "target": "./cardinal",
          "options": {
            "overwrite": true
          }
        },
        {
          "type": "copy",
          "src": "./dev/cardinal/dist/cardinal.js",
          "target": "./cardinal.js",
          "options": {
            "overwrite": true
          }
        }
      ]
    },
    {
      "name": "cardinal-w3c-theme",
      "src": "https://github.com/PrivateSky/cardinal-w3c-theme.git",
      "actions": [
        {
          "type": "smartClone",
          "target": "./dev/themes",
          "collectLog": false
        },
        {
          "type": "remove",
          "target": "./themes/cardinal-w3c-theme"
        },
        {
          "type": "copy",
          "src": "./dev/themes/cardinal-w3c-theme/src",
          "target": "./themes/cardinal-w3c-theme",
          "options": {
            "overwrite": true
          }
        }
      ]
    }
  ],
  "build-cardinal": [
    {
      "name": "cardinal-build",
      "src": "",
      "actions": [
        {
          "type": "execute",
          "cmd": "cd dev/cardinal && npm run dist ../"
        },
        {
          "type": "copy",
          "src": "./dev/cardinal/dist/cardinal",
          "target": "./cardinal",
          "options": {
            "overwrite": true
          }
        }
      ]
    }
  ],
  "copy-w3c-theme": [
    {
      "name": "w3c-theme-copy",
      "src": "",
      "actions": [
        {
          "type": "remove",
          "target": "./themes/cardinal-w3c-theme"
        },
        {
          "type": "copy",
          "src": "./dev/themes/cardinal-w3c-theme/src",
          "target": "./themes/cardinal-w3c-theme"
        }
      ]
    }
  ]
}
